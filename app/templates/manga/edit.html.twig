{% extends 'base.html.twig' %}

{% block title %}Modifier le Manga{% endblock %}

{% block body %}
<div class="row">
    <div class="col">
        <h1>Modifier le Manga</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        {{ include('manga/_form.html.twig', {'form': form, 'button_label': 'Mettre à jour'}) }}
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">Retour à la liste</a>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        {{ include('manga/_delete_form.html.twig', { 'manga': manga }) }}
    </div>
</div>
{% endblock %}
