{% extends 'base.html.twig' %}

{% block title %}Modifier les tags{% endblock %}

{% block body %}
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1>
                    <i class="fas fa-tags me-2"></i> Modifier les tags
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('manga_edit', {'id': manga.id}) }}">{{ manga.title }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tags</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="card-title mb-0">
            <i class="fas fa-tags me-2"></i> Gérer les tags pour "{{ manga.title }}"
        </h5>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="tags-select-container mb-4">
                {{ form_widget(form) }}
            </div>
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour au dashboard
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer les tags
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<style>
    /* Style pour les étiquettes des cases à cocher des tags */
    div[id$="tags"] label.form-check-label {
        display: inline-block;
        margin: 0.3rem;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        background-color: #f8f9fa;
        transition: all 0.2s ease;
        cursor: pointer;
        border: 1px solid #dee2e6;
    }
    
    /* Style quand la case est cochée */
    div[id$="tags"] input[type="checkbox"]:checked + label.form-check-label {
        background-color: #6c5ce7;
        color: white;
        border-color: #6c5ce7;
    }
    
    /* NE PAS masquer les cases à cocher natives */
    div[id$="tags"] input[type="checkbox"] {
        margin-right: 5px;
    }
    
    /* Layout pour les tags */
    div[id$="tags"] .form-check {
        display: inline-block;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
    }
    
    /* Organisation de la liste des tags */
    .tags-select-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }
</style>
{% endblock %}